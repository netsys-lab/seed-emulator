      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "types": ["node"],
      "outDir": "bin/"
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
